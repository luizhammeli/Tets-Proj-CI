default_platform(:ios)

lane :ci_lint do
  swiftlint(
    mode: :lint,        # ou :fix
    strict: true        # falha o build se houver warning/error
  )
end

desc "Run Scheme Tets-Proj-CI"
lane :ci_iOS do
  scan(
      clean: true,
      scheme: "Tets-Proj-CI",
      sdk: "iphonesimulator",
      device: 'iPhone 16 Pro (18.5)'
  )

  xcov(
    scheme: "Tets-Proj-CI",
    output_directory: "xcov_output",
    minimum_coverage_percentage: 80.0
  )
end
